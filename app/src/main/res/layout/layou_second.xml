<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_test1"
        android:layout_gravity="left|top"
        android:text="Button_test1"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/button_test2"
        android:layout_gravity="right|top"
        android:text="button_test2"
        android:textAllCaps="true"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/button_test3"
        android:layout_gravity="left|bottom"
        android:text="button_test3"
        android:textAllCaps="true"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%" />

    <Button
        android:id="@+id/button_test4"
        android:layout_gravity="right|bottom"
        android:text="button_test4"
        android:textAllCaps="true"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%" />

</androidx.percentlayout.widget.PercentFrameLayout>